<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinghorn.inksplat.inksplat.InkSplatActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <RelativeLayout
                    android:id="@+id/paint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@android:color/black"
                    android:gravity="center_horizontal">

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/check_slider"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/black"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/paint_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tool_ui_btn"
                        android:backgroundTint="@android:color/holo_green_light"
                        app:srcCompat="@drawable/icon_check" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/swatch_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/paintbrush_forward"
                    android:layout_alignStart="@+id/paintbrush_forward"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark">

                    <LinearLayout
                        android:id="@+id/swatch_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="13dp">

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha="1"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="#FFFFFF">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/redshade1">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/redshade2">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/redshade3">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/purpshade1">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/purpshade2">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/purpshade3">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/blueshade1">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/blueshade2">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/blueshade3">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/greenshade1">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/greenshade2">

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="15dp"
                            android:alpha=".2"
                            android:background="@drawable/ink_drop"
                            android:backgroundTint="@color/greenshade3">

                        </RelativeLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.8"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/cancel_paint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/tool_ui_btn"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:visibility="gone"
                        app:srcCompat="@drawable/icon_cancel" />

                    <ImageButton
                        android:id="@+id/brush_size_up"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/tool_ui_btn"
                        android:visibility="gone"
                        app:srcCompat="@drawable/icon_plus" />

                    <ImageButton
                        android:id="@+id/brush_size_down"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/tool_ui_btn"
                        android:visibility="gone"
                        app:srcCompat="@drawable/icon_minus" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/option_frame"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/paint_size_icon" />

                <SeekBar
                    android:id="@+id/brush_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="92dp"
                    android:layout_marginRight="40dp"
                    android:max="100"
                    android:min="5"
                    android:padding="22dp"
                    android:paddingVertical="5dp"
                    android:progress="25"
                    android:progressDrawable="@drawable/inksplat_seekbar"
                    android:scrollIndicators="top"
                    android:thumb="@drawable/scroll_knob" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/paint_size_icon" />

                <ImageButton
                    android:id="@+id/paintbrush_back"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:alpha=".5"
                    android:background="@drawable/tool_ui_btn"
                    app:srcCompat="@drawable/icon_rotate_back" />

                <ImageButton
                    android:id="@+id/paintbrush_forward"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/paintbrush_back"
                    android:background="@drawable/tool_ui_btn"
                    android:visibility="gone"
                    app:srcCompat="@drawable/icon_right" />

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.ContentFrameLayout>
